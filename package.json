{
  "name": "@rangerchaz/aimem",
  "version": "0.2.1",
  "description": "Local memory and guardrails for AI coding assistants. Your AI gets more opinionated as your codebase gets crappier.",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "aimem": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli/index.js",
    "test": "tsc -p tsconfig.test.json && node --test 'dist-test/test/*.test.js'",
    "test:watch": "tsc -p tsconfig.test.json --watch",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "ai",
    "memory",
    "llm",
    "context",
    "coding-assistant",
    "claude",
    "claude-code",
    "mcp",
    "model-context-protocol",
    "guardrails",
    "anthropic",
    "openai",
    "cursor",
    "aider",
    "copilot"
  ],
  "author": "Chad Cox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rangerchaz/aimem.git"
  },
  "homepage": "https://github.com/rangerchaz/aimem#readme",
  "bugs": {
    "url": "https://github.com/rangerchaz/aimem/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "chokidar": "^5.0.0",
    "commander": "^14.0.2",
    "glob": "^13.0.0",
    "mockttp": "^4.2.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.1",
    "typescript": "^5.9.3"
  }
}
